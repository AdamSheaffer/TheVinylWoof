<!DOCTYPE html>
<html ng-app="VinylWoofApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar">
        <div class="container head-wrap col-lg-10">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Vinyl Woof", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="/#/MyProfile">
                            <span class="glyphicon glyphicon-user"></span>
                            <span class="nav-link">Profile</span>
                        </a>
                    </li>
                    <li>
                        <a href="/#/">
                            <span class="glyphicon glyphicon-shopping-cart"></span>
                            <span class="nav-link">Shop</span>
                        </a>
                    </li>
                    <li>
                        <a href="/#/NewAlbum">
                            <span class="glyphicon glyphicon-music"></span>
                            <span class="nav-link">Give</span>
                        </a>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content col-md-10 col-sm-12">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
